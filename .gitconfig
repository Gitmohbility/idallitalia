[core]
    autocrlf = input
    safecrlf = warn
    ignorecase = true
    excludesfile = .gitignore
    whitespace = trailing-space,indent-with-non-tab

[merge]
    tool = vscode
    ff = false

[diff]
    tool = vscode
    colorMoved = default

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    last = log -1 HEAD
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    undo = reset --soft HEAD~1
    amend = commit --amend --no-edit
    unstage = reset -q HEAD --
    wip = commit -m "WIP: Work in progress"
    uncommit = reset --soft HEAD~1
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    feat = commit -m "feat: "
    fix = commit -m "fix: "
    docs = commit -m "docs: "
    style = commit -m "style: "
    refactor = commit -m "refactor: "
    test = commit -m "test: "
    chore = commit -m "chore: "
    revert = commit -m "revert: "
    ci = commit -m "ci: "
    perf = commit -m "perf: "

[format]
    pretty = format:%C(yellow)%h%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset
    mailmap = true

[push]
    default = simple

[branch]
    autosetuprebase = always

[init]
    defaultBranch = main

[advice]
    statusHints = false
    pushUnqualifiedRefname = false

[credential]
    helper = osxkeychain

[http]
    postBuffer = 524288000

[gc]
    auto = 256
    pruneexpire = "2 weeks ago"
